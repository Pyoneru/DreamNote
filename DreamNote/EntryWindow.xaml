"/>
            </ScrollViewer>

            <!--Home button-->
            <Button x:Name="btn_home"
                Grid.Row="2"
                Width="70"
                Height="70"
                Background="Transparent"
                BorderBrush="Transparent"
                Margin="0,0,0,0"
                Click="Button_Home">
                <StackPanel>
                    <Image Width="64" 
                       Height="64" 
                       Source="{StaticResource home}"/>
                    <!-- The image is stored in Resources/Icons.xaml -->
                </StackPanel>
            </Button>
        </Grid>

        <!--Symbol side section-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/> <!--Title-->
                <RowDefinition/> <!--Content-->
            </Grid.RowDefinitions>

            <!--Title-->
            <TextBlock Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="Symbols"
                       FontSize="32"
                       Foreground="#FFFFFF"/>
            
            <!--Content-->
            <Border Grid.Row="1"
                    Margin="30,30,30,30"
                    CornerRadius="5,5,5,5"
                    BorderThickness="1"
                    BorderBrush="#3A3939"
                    Background="#3A3939">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/> <!--List of symbols-->
                        <RowDefinition Height="70"/> <!--TextBox-->
                        <RowDefinition Height="70"/> <!--Add button-->
                    </Grid.RowDefinitions>

                    <!--List of symbols-->
                    <ScrollViewer Grid.Row="0">
                        <StackPanel x:Name="entry_symbols">
                            <StackPanel.Resources>
                                <Style TargetType="{x:Type uc:SymbolListItem}">
                                    <Setter Property="Margin" Value="0,5,0,5"/>
                                </Style>
                            </StackPanel.Resources>
                        </StackPanel>
                    </ScrollViewer>

                    <TextBox x:Name="tb_symbol"
                        Grid.Row="1"
                        Background="Transparent"
                        TextAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Foreground="#FFFFFF"
                             BorderBrush="Transparent"
                        />

                    <Button x:Name="btn_add_symbol"
                            Grid.Row="2"
                            Width="48"
                            Height="48"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            VerticalAlignment="Top"
                            Click="Button_Add_Symbol">
                        <StackPanel>
                            <Image Width="42" 
                                   Height="42" 
                                   Source="{StaticResource plus}"/>
                            <!-- The image is stored in Resources/Icons.xaml -->
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</Window>
